<div class="jumbotron">
  <h1>Gem in a Strong Box</h1>
  <p>Private Ruby Gem Server</p>
  <p>
    <%= link_to omniauth_path('google'), class: "btn btn-primary btn-lg google" do %>
      <%= icon('google', 'Log in with Google') %>
    <% end %>

    <% if Rails.env.development? || Rails.env.test? %>
      <%= link_to omniauth_path('developer'), class: "btn btn-primary btn-lg developer" do %>
        <%= icon('warning', 'Log in to development') %>
      <% end %>
    <% end %>
  </p>
</div>
